<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:gravity="center_horizontal"
    android:background="@color/white"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/pd_iv_fruit_1"
            android:layout_width="16px"
            android:layout_height="16px"
            android:layout_margin="5dp"
            android:src="@drawable/pointer_black" />

        <ImageView
            android:id="@+id/pd_iv_fruit_2"
            android:layout_width="16px"
            android:layout_height="16px"
            android:layout_margin="5dp"
            android:src="@drawable/pointer_black" />

        <ImageView
            android:id="@+id/pd_iv_fruit_3"
            android:layout_width="16px"
            android:layout_height="16px"
            android:layout_margin="5dp"
            android:src="@drawable/pointer_black" />

        <ImageView
            android:id="@+id/pd_iv_fruit_4"
            android:layout_width="16px"
            android:layout_height="16px"
            android:layout_margin="5dp"
            android:src="@drawable/pointer_black" />

        <ImageView
            android:id="@+id/pd_iv_fruit_5"
            android:layout_width="16px"
            android:layout_height="16px"
            android:layout_margin="5dp"
            android:src="@drawable/pointer_black" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/loading"
        android:textColor="@color/grey"
        android:layout_gravity="center_horizontal"
        android:id="@+id/txtViewLoadMessage"
        android:gravity="center_horizontal"
        />

</LinearLayout>